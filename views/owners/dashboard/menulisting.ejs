<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Restaurant Menu</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #fff;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
      padding: 2rem;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 2rem;
    }

    .btn-add {
      background-color: #dc3545;
      color: white;
    }

    .btn-add:hover {
      background-color: #c82333;
    }

    .food-card {
      border: 1px solid #eee;
      border-radius: 10px;
      padding: 1rem;
      margin-bottom: 1rem;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .food-info {
      display: flex;
      align-items: center;
    }

    .food-img {
      width: 80px;
      height: 80px;
      border-radius: 10px;
      object-fit: cover;
      margin-right: 1rem;
    }

    .form-check-input {
      transform: scale(1.2);
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h2>Your Current Menu</h2>
      <a href="/menu" class="btn btn-add">Add Food to Menu</a>
    </div>

    <% if (menuItem && menuItem.length > 0) { %>
      <% menuItem.forEach(item => { %>
        <div class="food-card">
          <div class="food-info">
            <img src="<%= item.imageUrl %>" alt="Food" class="food-img">
            <div>
              <h5><%= item.name %></h5>
              <p class="mb-0"><strong>â‚¹<%= item.price %></strong> | <%= item.category %></p>
              <small>Ingredients: <%= item.ingredients %></small>
            </div>
          </div>
          <div>
            <form action="/owners/menu/toggle/<%= item._id %>" method="POST">
              <div class="form-check form-switch">
                <input 
                  class="form-check-input" 
                  type="checkbox" 
                  name="available" 
                  onchange="this.form.submit()" 
                  <%= item.available ? 'checked' : '' %>
                >
                <label class="form-check-label"><%= item.available ? 'Available' : 'Unavailable' %></label>
              </div>
            </form>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p>No food items added yet.</p>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
