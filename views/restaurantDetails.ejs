<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= restaurant.restaurantName %> - Menu</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .btn-custom-red {
      background-color: white;
      color: #dc3545;
      border: 2px solid #dc3545;
      transition: background-color 0.3s, color 0.3s;
    }

    .btn-custom-red:hover {
      background-color: #dc3545;
      color: white;
    }

    .menu-card-img {
      height: 200px;
      object-fit: cover;
      border-bottom: 1px solid #ddd;
    }

    .card-title {
      font-size: 1.1rem;
      font-weight: 600;
    }

    .card-price {
      font-weight: bold;
    }
  </style>
</head>
<body>

  <div class="container my-5" style="width: 75rem;">
    <a href="/main" class="btn btn-outline-secondary mb-4">&larr; Back</a>

    <h2 class="mb-3"><%= restaurant.restaurantName %></h2>
    <p class="text-muted">Welcome! Here's our delicious menu.</p>

    <% if (menuItems.length > 0) { %>
      <div class="row row-cols-1 row-cols-md-3 g-4 mt-4">
        <% menuItems.forEach(item => { %>
          <div class="col">
            <div class="card h-100 shadow-sm">
              <img src="<%= item.imageUrl %>" class="card-img-top menu-card-img" alt="<%= item.name %>">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= item.name %></h5>
                <p class="card-text text-muted"><%= item.description %></p>
                <p class="card-price">₹<%= item.price %></p>
                <form action="/cart/add/<%= item._id %>" method="POST" class="mt-auto">
                  <button type="submit" class="btn btn-custom-red w-100">Add to Cart</button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <div class="alert alert-info text-center mt-4">
        No menu items available for this restaurant.
      </div>
    <% } %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

